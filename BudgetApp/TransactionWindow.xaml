<Window x:Class="BudgetApp.TransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetApp"
        mc:Ignorable="d"
        Title="TransactionWindow" SizeToContent="WidthAndHeight" ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <StackPanel Margin="20" >
        <UniformGrid Columns="2" VerticalAlignment="Top">
            <Label Content="_Date" Margin="5"/>
            <TextBox x:Name="tbDate" Margin="5"/>
            <Label Content="_Description" Margin="5"/>
            <TextBox x:Name="tbDescription" Margin="5"/>
            <Label Content="_Category" Margin="5"/>
            <TextBox x:Name="tbCategory" Margin="5"/>
            <Label Content="_Amount" Margin="5"/>
            <TextBox x:Name="tbAmount" Margin="5"/>
        </UniformGrid>
        <UniformGrid Columns="2" Margin="0, 20, 0, 0">
            <Button Content="_Accept" IsDefault="True" Click="Accept_Click" Margin="5"/>
            <Button Content="_Deny" IsDefault="True" Click="Accept_Click" Margin="5"/>
        </UniformGrid>
    </StackPanel>
</Window>
